{
  "name": "plutarch",
  "version": "3.0.15",
  "description": "Cli tool for serve and build react app, support JSON pattern config.",
  "main": "index.js",
  "bin": {
    "plutarch": "bin/plutarch.js"
  },
  "keywords": [
    "plutarch",
    "react",
    "cli",
    "create-react-app",
    "webpack"
  ],
  "files": [
    "bin",
    "src",
    "lib"
  ],
  "scripts": {
    "build": "rimraf lib && babel src --out-dir lib",
    "test": "npm run build && cross-env NODE_ENV=test nyc mocha --no-timeouts test/**/*-test.js"
  },
  "author": "alfred <sc941203@gmail.com> (https://github.com/schifred)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/schifred/plutarch/issues"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/schifred/plutarch.git"
  },
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": true,
    "instrument": false
  },
  "engines": {
    "node": ">=6.11.5"
  },
  "dependencies": {
    "chalk": "^2.1.0",
    "clipboardy": "^2.1.0",
    "common-bin": "^2.8.1",
    "core-decorators": "^0.20.0",
    "cross-spawn": "^6.0.5",
    "debug": "^3.1.0",
    "inquirer": "^5.2.0",
    "lodash": "4.17.4",
    "react-dev-utils": "^6.1.1",
    "react-error-overlay": "^4.0.0",
    "shelljs": "^0.8.3",
    "webpack-dev-server": "^3.1.10",
    "webpackrc-cfg": "^1.1.16",
    "yargs": "^8.0.2"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-add-module-exports": "^1.0.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "cross-env": "^5.0.5",
    "expect": "^21.2.1",
    "glob": "^7.1.2",
    "mocha": "^4.0.0",
    "nyc": "^11.2.1",
    "rimraf": "^2.6.2"
  }
}
